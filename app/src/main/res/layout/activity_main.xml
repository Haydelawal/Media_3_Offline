<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OnlinePlayerActivity">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_exo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:resize_mode="fixed_width"
        app:show_buffering="when_playing"
        app:show_fastforward_button="true"
        app:show_next_button="false"
        app:show_previous_button="false"
        app:show_rewind_button="true"
        app:show_subtitle_button="true"
        app:use_artwork="true"
        app:use_controller="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/label_download" />

        <Button
            android:id="@+id/playOffline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/label_play_video_offline" />
    </LinearLayout>


</LinearLayout>